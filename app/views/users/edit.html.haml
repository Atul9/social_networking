.col-md-5
  = image_tag @user.avatar.url(:medium)
.col-md-5
  #content.col-lg-10.col-sm-10
    %h4 Edit
    = simple_form_for(@user, html: {class: 'form-horizontal'}, wrapper: :horizontal_form) do |f|
      = f.error_notification
      .row
        .form-inputs
          .col-md-12
            = f.input :username
            = f.input :email, required: true, autofocus: true
            = f.input :firstname
            = f.input :lastname
            = f.input :avatar, as: :file
        .form-actions
          = f.button :submit, "Update", class: 'btn btn-primary btn-sm'
          = link_to "Back", root_path, class: 'btn btn-danger btn-sm'

.navbar.navbar-inverse.navbar-static-top
  .navbar-header
    = link_to 'Activity', root_path, class: 'navbar-brand'
  .collapse.navbar-collapse
    - if user_signed_in?
      %ul.nav.navbar-nav
        %li= link_to 'Posts', posts_path
      %ul.nav.navbar-nav
        %li.dropdown
          = link_to 'Connections', class: 'dropdown-toggle', "data-toggle" => "dropdown", "aria-expanded" => false do 
            Connections
            %span{class: 'caret'}
          %ul{class: 'dropdown-menu'}
            %li= link_to "Friends", friends_user_path(current_user)
            %li= link_to 'Pending Friend Requests', pending_friend_requests_user_path(current_user)
            %li= link_to "Other Users", people_user_path(current_user)
      %ul.nav.navbar-nav.navbar-right
        = image_tag current_user.avatar.url(:thumb)
        %li.dropdown
          = link_to "#{current_user.username}", class: 'dropdown-toggle', 'data-toggle' => 'dropdown', 'aria-expanded' => false do
            #{current_user.username}
            %span.carent
              %ul.dropdown-menu
                %li= link_to 'Profile', edit_user_path(current_user)
                %li= link_to "Logout", destroy_user_session_path, method: :delete
        %li= link_to ""

